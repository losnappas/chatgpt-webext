{
	"manifest_version": 2,
	"name": "ChatGPT popup",
	"version": "1.0",
	"description": "Chatgpt popup",
	"icons": {
		"48": "icon.jpeg"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"webRequest",
		"webRequestBlocking",
		"webRequestFilterResponse",
		"https://chat.openai.com/*"
	],
	"background": {
		"page": "background.html",
		"persistent": true,
		"default_icon": "icon.jpeg"
	},
	"browser_action": {
		"default_title": "ChatGPT",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://chat.openai.com/*"],
			"js": ["contentScript.js"],
			"all_frames": true
		}
	]
}
